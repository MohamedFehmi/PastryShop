@model ShoppingCardViewModel

@if (Model.ShoppingCard.ShoppingCardItems.Count > 0)
{
    <li>
        <a>
            <span class="glyphicon glyphicon-shopping-cart"></span>
            <span id="cart-status">
                @Model.ShoppingCard.ShoppingCardItems.Count
            </span>
        </a>
    </li>
}